
@model PagedList.IPagedList<Planes.Models.Plane>

<div>
    Strona @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
    z @Model.PageCount

    @if (Model.HasPreviousPage)
    {
        @Html.ActionLink("<<", "Index", new { page = 1 })
        @Html.Raw(" ");
        @Html.ActionLink("< Poprzednia", "Index", new { page = Model.PageNumber - 1 })
    }
    else
    {
        @:<<
        @Html.Raw(" ");
        @: < Poprzednia
    }

    @if (Model.HasNextPage)
    {
        @Html.ActionLink("Następna >>", "Index", new { page = Model.PageNumber + 1 })
        @Html.Raw(" ");
        @Html.ActionLink(">>", "Index", new { page = Model.PageCount })
    }
    else
    {
        @: Następna >
        @Html.Raw(" ");
        @: >>
    }


</div>
